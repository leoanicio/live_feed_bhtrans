{
    "presets": [
        [
            "@babel/preset-env",
            {
                "targets": {
                    "node": "current"
                }
            }
        ],
        "@babel/preset-typescript"
    ],
    "root": [
        "./"
    ],
    "plugins": [
        [
            "module-resolver",
            {
                "alias": {
                    "@modules": "./src/modules"
                }
            }
        ]
    ]
}